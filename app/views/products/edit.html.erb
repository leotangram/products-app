<h1>Editando un producto</h1>
 
<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
 
  <% if @product.errors.any? %>
    <div id="error_explanation">
    <h2>
        <%= pluralize(@product.errors.count, "error") %> han impedido que el producto sea grabado:
    </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :nombre %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :precio %><br>
    <%= f.number_field :price, class: :text_field, step: :any %>
  </p>
 
